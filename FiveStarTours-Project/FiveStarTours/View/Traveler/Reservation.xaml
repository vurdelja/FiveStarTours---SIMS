<Window x:Class="FiveStarTours.View.Traveler.Reservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiveStarTours.View.Traveler"
        mc:Ignorable="d"
        Title="Reservation" Height="450" Width="800">
    <Grid Background="#FFED9C9C">
        <Label Content="Choose dates for your reservation" HorizontalAlignment="Left" Margin="176,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Width="381" HorizontalContentAlignment="Center" BorderThickness="8,8,8,8" BorderBrush="#FF8D3A92"/>
        <Grid>
            <Label Content="ARRIVAL DATE:" HorizontalAlignment="Left" Margin="176,103,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Label Content="DEPARTURE DATE:" HorizontalAlignment="Left" Margin="176,159,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Label Content="LENGTH OF STAY:" HorizontalAlignment="Left" Margin="176,217,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="40" Width="202"/>
            <DatePicker HorizontalAlignment="Left" Margin="450,103,0,0" VerticalAlignment="Top" Height="51" Width="189"/>
            <DatePicker HorizontalAlignment="Left" Margin="450,159,0,0" VerticalAlignment="Top" Height="53" Width="189"/>
            <TextBox HorizontalAlignment="Left" Margin="450,217,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="189" Height="40"/>
            <Button Content="Continue reservation" HorizontalAlignment="Left" Margin="391,314,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" BorderThickness="5,5,5,5" Height="100" Width="355">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FFE89A9A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Go back" HorizontalAlignment="Left" Margin="10,326,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" BorderThickness="4,4,4,4" BorderBrush="#FF8B3636" Height="88" Width="214" Click="goback"/>
        </Grid>

    </Grid>
</Window>
