        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiveStarTours.View"
        mc:Ignorable="d"
        Title="TravelerMain" Height="450" Width="800">
    <Grid Background="#FFEACECE">
        <Button Content="ENTER" HorizontalAlignment="Left" Margin="293,182,0,0" VerticalAlignment="Top" Height="93" Width="233" FontSize="22" FontWeight="Bold" BorderThickness="5,4,4,5" Background="#FFEDA3A3" Click="Open">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFB04444" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Label Content="Press the button to see all accomodation " HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" HorizontalContentAlignment="Center" Width="663"/>

    </Grid>
