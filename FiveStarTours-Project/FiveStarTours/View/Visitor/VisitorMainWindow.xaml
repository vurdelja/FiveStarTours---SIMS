<Window x:Class="FiveStarTours.View.Visitor.VisitorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiveStarTours.View.Visitor"
        mc:Ignorable="d"
        Title="VisitorMainWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
         WindowStartupLocation="CenterScreen">
    <Grid Background="LavenderBlush">
        <Button Content="TOURS" HorizontalAlignment="Left" Margin="60, 60, 0, 0" VerticalAlignment="Top"
                Height="47" Width="95" Click="Button_Click" Background="LightCyan" FontSize="20"/>
        <Label Content="Click on the button below if you want to view the tours we have to offer
" HorizontalAlignment="Left" Margin="20, 20, 0, 0" VerticalAlignment="Top" FontSize="15" Background="LemonChiffon"/>
        
    </Grid>
</Window>
